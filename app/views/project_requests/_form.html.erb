<%= form_for(@project_request) do |f| %>
  <% if @project_request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project_request.errors.count, "error") %> prohibited this project_request from being saved:</h2>

      <ul>
      <% @project_request.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :project_help %><br />
    <%= f.text_field :project_help %>
  </div>
  <div class="field">
    <%= f.label :employee_id %><br />
    <%= f.number_field :employee_id %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br />
    <%= f.date_select(:start_date, :order => [:month, :day, :year]) %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br />
    <%= f.date_select(:end_date, :order => [:month, :day, :year], :default => @current_date)  %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </div>



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
